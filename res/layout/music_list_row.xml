<?xml version="1.0" encoding="utf-8"?> 

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/music_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dip"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/music_length_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/music_radiobutton"
        android:layout_centerVertical="true"
        android:paddingRight="8dip"
        android:textStyle="normal"
        android:typeface="monospace"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/music_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/music_length_textview"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="8dip"
        android:textStyle="normal"
        android:typeface="sans"
        android:textSize="20sp"
        android:textColor="#ff0066ff"
        android:lines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true" />

</RelativeLayout>
